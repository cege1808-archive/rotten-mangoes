<footer>
  <small>
    <% if current_user %>
      Signed in as <%= current_user.full_name %> (<%= link_to "Log out", session_path("current"), method: :delete %>)

      <% if current_user.admin? || (!current_user.nil? && shadow_user) %>
        <%= link_to "Admin", admin_users_path %>
        <% if shadow_user %>
          <%= link_to "Switch back to Admin", admin_shadow_sessions_path, method: :delete %>
        <% end %>
      <% end %>

    <% else %>
      <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
    <% end %>
  </small>

</footer>